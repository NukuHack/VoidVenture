<Window x:Class="save_load.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:save_load"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Background="#FF26E2F1" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Main Content -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="568,142,0,0" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
            <Button x:Name="loadData" Content="Load Data" Width="100" Height="30" Margin="10" />
            <Button x:Name="saveData" Content="Save Data" Width="100" Height="30" Margin="10" />
            <Button x:Name="genData" Content="Generate Data" Width="100" Height="30" Margin="10" />
        </StackPanel>



        <Label Content="save name" HorizontalAlignment="Left" Margin="220,191,0,0" VerticalAlignment="Top" Height="26" Width="91"/>
        <TextBox x:Name="pathToSave" HorizontalAlignment="Left" Margin="195,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Height="42"/>



        <!-- Overlay Canvas -->
        <Canvas x:Name="saveFileOverlay" Background="#AA000000">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="300" Background="#FF38A049" Canvas.Left="200" Canvas.Top="142">
                <!-- Title -->
                <TextBlock Text="Save File Manager" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,265" />

                <!-- ComboBox for selecting save files -->
                <ComboBox x:Name="saveFileSelector" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Top" 
                          Width="200" 
                          Margin="0,40,0,0" />

                <!-- TextBlock to display save details -->
                <TextBlock x:Name="saveDetails" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Top" 
                           Margin="0,137,0,0" 
                           Text="Select a save file to view details." 
                           Width="200" 
                           TextWrapping="Wrap" Height="97" />

                <!-- Buttons for actions -->
                <Button x:Name="loadButton" Content="Load" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Margin="50,0,0,192" 
                        Width="75" />
                <Button x:Name="deleteButton" Content="Delete" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="0,88,0,0" 
                        Width="76" />
                <Button x:Name="resaveButton" Content="Resave" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        Margin="0,0,50,192" 
                        Width="75" />

                <Button x:Name="loadExternalSave" Content="Load External Save" Margin="-30,0,0,30" RenderTransformOrigin="0.5,0.5" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="90" FontSize="10" >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

                <Button x:Name="closeOverlay" Content="Close" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Margin="0,0,0,20" 
                        Width="75" />
            </Grid>
        </Canvas>
    </Grid>
</Window>
